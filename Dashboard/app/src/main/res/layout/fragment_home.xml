<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackgroundLight"
    tools:context=".fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayouOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:id="@+id/linearLayoutOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearLayoutTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Viewer CardView -->

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res/android"
                        card_view:id="@+id/viewerCardView"
                        card_view:layout_width="0dp"
                        card_view:layout_height="wrap_content"
                        card_view:layout_weight="1"
                        card_view:layout_margin="5dp"
                        card_view:padding="10dp"
                       >

                        <LinearLayout
                            card_view:layout_width="match_parent"
                            card_view:layout_height="wrap_content"
                            card_view:layout_marginLeft="2dp"
                            card_view:layout_marginTop="4dp"
                            card_view:layout_marginBottom="1dp"
                            card_view:orientation="horizontal"
                            card_view:weightSum="4.0">


                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_weight="1.5">

                                <ImageView
                                    card_view:id="@+id/viewerIV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:adjustViewBounds="true"
                                    card_view:src="@drawable/ic_baseline_account_circle_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_marginStart="4dp"
                                card_view:layout_marginLeft="4dp"
                                card_view:layout_marginEnd="3dp"
                                card_view:layout_marginRight="3dp"
                                card_view:layout_weight="2.5"
                                card_view:orientation="vertical">

                                <TextView
                                    card_view:id="@+id/viewerNumberTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="92776"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />


                                <TextView
                                    card_view:id="@+id/viewerTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_below="@id/viewerNumberTV"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="Viewer"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />



                            </RelativeLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <!-- downLoded CardView -->
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res/android"
                        card_view:id="@+id/downloadsCardView"
                        card_view:layout_width="0dp"
                        card_view:layout_height="wrap_content"
                        card_view:layout_weight="1"
                        card_view:layout_margin="5dp"
                        card_view:padding="10dp"
                        >

                        <LinearLayout
                            card_view:layout_width="match_parent"
                            card_view:layout_height="wrap_content"
                            card_view:layout_marginLeft="2dp"
                            card_view:layout_marginTop="4dp"
                            card_view:layout_marginBottom="1dp"
                            card_view:orientation="horizontal"
                            card_view:weightSum="4.0">


                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_weight="1.5">

                                <ImageView
                                    card_view:id="@+id/downloadsNumberIV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:adjustViewBounds="true"
                                    card_view:src="@drawable/ic_baseline_download_for_offline_24" />
                            </RelativeLayout>

                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_marginStart="4dp"
                                card_view:layout_marginLeft="4dp"
                                card_view:layout_marginEnd="3dp"
                                card_view:layout_marginRight="3dp"
                                card_view:layout_weight="2.5"
                                card_view:orientation="vertical">

                                <TextView
                                    card_view:id="@+id/downloadsNumberTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="52791"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />


                                <TextView
                                    card_view:id="@+id/downlodsTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_below="@id/downloadsNumberTV"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="Viewer"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />



                            </RelativeLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <!-- Lenear layout three -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Products CardView -->
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res/android"
                        card_view:id="@+id/productsCardView"
                        card_view:layout_width="0dp"
                        card_view:layout_height="wrap_content"
                        card_view:layout_weight="1"
                        card_view:layout_margin="5dp"
                        card_view:padding="10dp"
                        >

                        <LinearLayout
                            card_view:layout_width="match_parent"
                            card_view:layout_height="wrap_content"
                            card_view:layout_marginLeft="2dp"
                            card_view:layout_marginTop="4dp"
                            card_view:layout_marginBottom="1dp"
                            card_view:orientation="horizontal"
                            card_view:weightSum="4.0">


                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_weight="1.5">

                                <ImageView
                                    card_view:id="@+id/productsIV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:adjustViewBounds="true"
                                    card_view:src="@drawable/buskets" />
                            </RelativeLayout>

                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_marginStart="4dp"
                                card_view:layout_marginLeft="4dp"
                                card_view:layout_marginEnd="3dp"
                                card_view:layout_marginRight="3dp"
                                card_view:layout_weight="2.5"
                                card_view:orientation="vertical">

                                <TextView
                                    card_view:id="@+id/productsNumberTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="4000+"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />


                                <TextView
                                    card_view:id="@+id/productsTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_below="@id/productsNumberTV"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="Products"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />


                            </RelativeLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!-- Reports CardView -->
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res/android"
                        card_view:id="@+id/reportsCardView"
                        card_view:layout_width="0dp"
                        card_view:layout_height="wrap_content"
                        card_view:layout_weight="1"
                        card_view:layout_margin="5dp"
                        card_view:padding="10dp"
                        >

                        <LinearLayout
                            card_view:layout_width="match_parent"
                            card_view:layout_height="wrap_content"
                            card_view:layout_marginLeft="2dp"
                            card_view:layout_marginTop="4dp"
                            card_view:layout_marginBottom="1dp"
                            card_view:orientation="horizontal"
                            card_view:weightSum="4.0">


                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_weight="1.5">

                                <ImageView
                                    card_view:id="@+id/reportsNumberIV"
                                    card_view:layout_width="wrap_content"
                                    card_view:layout_height="wrap_content"
                                    card_view:adjustViewBounds="true"
                                    card_view:layout_margin="2dp"
                                    card_view:src="@drawable/reports" />
                            </RelativeLayout>

                            <RelativeLayout
                                card_view:layout_width="0dp"
                                card_view:layout_height="wrap_content"
                                card_view:layout_marginStart="4dp"
                                card_view:layout_marginLeft="4dp"
                                card_view:layout_marginEnd="3dp"
                                card_view:layout_marginRight="3dp"
                                card_view:layout_weight="2.5"
                                card_view:orientation="vertical">

                                <TextView
                                    card_view:id="@+id/reportsNumberTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="4429"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />


                                <TextView
                                    card_view:id="@+id/reportsTV"
                                    card_view:layout_width="match_parent"
                                    card_view:layout_height="wrap_content"
                                    card_view:ellipsize="end"
                                    card_view:layout_below="@id/reportsNumberTV"
                                    card_view:layout_margin="1dp"
                                    card_view:paddingLeft="4dp"
                                    card_view:text="Reports"
                                    card_view:textColor="@android:color/black"
                                    card_view:textSize="18sp" />


                            </RelativeLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


<!-- Recent Activity Layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/layout2"
                >

                <!-- recent CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/recentActivityCardView"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_margin="5dp"
                            android:padding="3dp"
                            android:background="@color/cardview_light_background"
                            android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recent Activity"
                            android:layout_margin="5dp"
                            android:layout_weight="0.2"
                            android:textColor="@color/black"
                            android:textSize="25sp"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:src="@drawable/ic_baseline_add_24"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/gray"
                            android:layout_height="1dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="4"
                                android:orientation="vertical">
                                <View
                                    android:layout_width="match_parent"
                                    android:background="#fff"
                                    android:layout_height="1dp"/>


                                <!-- Post A Product -->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginLeft="5dp">
                                    <TextView
                                        android:id="@+id/postProductTV"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:gravity="start"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_height="wrap_content"
                                        android:text="Post a Product"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:background="#fff"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/postDateTv"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_margin="5dp"
                                        android:gravity="end"
                                        android:textSize="20sp"
                                        android:textColor="@color/lightBlack"
                                        android:layout_height="wrap_content"
                                        android:text="16 Feb 21"/>
                                </LinearLayout>



                                <View
                                    android:layout_width="match_parent"
                                    android:background="#fff"
                                    android:layout_height="1dp"/>
                                <!-- Post A Product -->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginLeft="5dp">
                                    <TextView
                                        android:id="@+id/updateProductTV"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:gravity="start"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_height="wrap_content"
                                        android:text="Update Product"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:background="#fff"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/updateDateTV"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_margin="5dp"
                                        android:gravity="end"
                                        android:textSize="20sp"
                                        android:textColor="@color/lightBlack"
                                        android:layout_height="wrap_content"
                                        android:text="10 April 21"/>
                                </LinearLayout>



                                <View
                                    android:layout_width="match_parent"
                                    android:background="#fff"
                                    android:layout_height="1dp"/>

                                <!-- Share Story -->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginLeft="5dp">
                                    <TextView
                                        android:id="@+id/shareStoryTV"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:gravity="start"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_height="wrap_content"
                                        android:text="Share Story"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:background="#fff"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/shareDateTV"
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_margin="5dp"
                                        android:gravity="end"
                                        android:textSize="20sp"
                                        android:textColor="@color/lightBlack"
                                        android:layout_height="wrap_content"
                                        android:text="21 Jan 21"/>
                                </LinearLayout>



                                <View
                                    android:layout_width="match_parent"
                                    android:background="#fff"
                                    android:layout_height="1dp"/>

                                <!-- Monthly Download -->
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp">
                                    <TextView
                                        android:id="@+id/monthlyDownloadTV"
                                        android:layout_weight="1.2"
                                        android:layout_width="0dp"
                                        android:gravity="start"
                                        android:layout_margin="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="20sp"
                                        android:layout_height="wrap_content"
                                        android:text="Monthly Download"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:background="#fff"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/monthlyDownloadDateTV"
                                        android:layout_weight="0.8"
                                        android:layout_width="0dp"
                                        android:layout_margin="5dp"
                                        android:gravity="end"
                                        android:textSize="20sp"
                                        android:textColor="@color/lightBlack"
                                        android:layout_height="wrap_content"
                                        android:text="15 Feb 21"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:background="@color/gray"
                                    android:layout_height="1dp"/>

                                <!-- See More -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:padding="3dp"
                                    >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="See More"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:layout_weight="0.2"
                                        android:textColor="@color/black"
                                        android:textSize="25sp"/>


                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


                <!-- Social Comunication -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/amountLayoust"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:padding="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/twitterIV"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/twitter"/>

                        <ImageView
                            android:id="@+id/youtubeIV"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/youtubes"/>

                        <ImageView
                            android:id="@+id/facebookIV"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/facebook"/>

                        <ImageView
                            android:id="@+id/instagramIV"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/instagram"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>